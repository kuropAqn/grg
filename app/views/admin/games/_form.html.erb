<%= form_with model: game, url: game.persisted? ? admin_game_path : admin_games_path, method: game.persisted? ? :patch : :post do |f| %>
  <div>
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>
  <div>
    <%= f.label :image_cache %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.label :price %>
    <%= f.number_field :price %>
  </div>
  <div>
  <%= f.label :genre_id, "ジャンル" %>
  <%= f.select :genre_id, Genre.all.map { |g| [g.name, g.id] }, { include_blank: "--選択してください--" } %>
  </div>
  <div>
    <%= f.submit btntxt %>
  </div>
<% end %>